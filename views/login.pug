doctype html
html
	head
		meta(charset='utf-8')
		title 8+ #{ title }
		link(rel='stylesheet' href='/asset/css/login.css')
	body
		form(action='/login' method='post' class='form')
			
			input(name='email' class='btn' type='text' value=email placeholder=placeholderEmail autofocus)
			if (error !== null && error.email !== undefined)
				p.form-error=error.email

			input(name='password' class='btn' type='password' placeholder=placeholderPassword)
			if (error !== null && error.password !== undefined)
				p.form-error=error.password

			input(class='btn' type='submit' value=submitText)
			.redirect
				a(href="#")=forgotText
				a(href='/register')=registerText
		script(async src='/asset/js/login.min.js')